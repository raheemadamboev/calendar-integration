<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CalendarIntegration" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_ville_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange_ville_200</item>
        <item name="colorSecondaryVariant">@color/orange_ville_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="background_layout">@color/super_light_white</item>
        <item name="background_card">@color/white</item>

        <item name="text_primary">@color/black</item>
        <item name="text_secondary">@color/play_store_gray</item>
        <item name="text_error">@color/red</item>
        <item name="text_input">@color/black</item>
        <item name="text_button">@color/white</item>

        <item name="ripple_card">@color/orange_ville_ripple</item>
    </style>

    <!-- clear text input layout -->
    <style name="ClearTextTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/color_text_input_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textColorHint">?attr/text_input</item>
        <item name="endIconMode">clear_text</item>
        <item name="passwordToggleTint">?attr/colorPrimary</item>
        <item name="endIconTint">?attr/colorPrimary</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">?attr/text_input</item>
        <item name="errorTextColor">?attr/text_error</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="errorIconTint">?attr/text_error</item>
        <item name="boxStrokeErrorColor">?attr/text_error</item>
    </style>

    <!-- simple text input edit text -->
    <style name="SimpleEditText">
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">?attr/text_input</item>
        <item name="android:textColorHint">?attr/text_input</item>
    </style>

    <!-- header text of screens -->
    <style name="ScreenHeaderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/text_button</item>
    </style>

    <!-- simple material card view -->
    <style name="SimpleMaterialCard">
        <item name="cardCornerRadius">10dp</item>
        <item name="rippleColor">?attr/ripple_card</item>
        <item name="cardBackgroundColor">?attr/background_card</item>
        <item name="cardElevation">3.5dp</item>
    </style>

    <!-- simple floating action button -->
    <style name="SimpleFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="elevation">10dp</item>
        <item name="tint">?attr/text_button</item>
    </style>
</resources>